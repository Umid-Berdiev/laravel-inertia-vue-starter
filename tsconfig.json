{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "allowJs": true,
        "types": [
            "vite/client",
            "vite-plugin-pages/client",
            "@intlify/vite-plugin-vue-i18n/client"
        ],
        "paths": {
            "@/*": ["./resources/js/*"]
        }
    },
    "include": [
        "components.d.ts",
        "components-global.d.ts",
        "resources/js/**/*.js",
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue"
    ]
}
